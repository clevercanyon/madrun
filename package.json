{
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "version": "1.0.132",
    "license": "GPL-3.0-or-later",
    "name": "@clevercanyon/madrun",
    "description": "Runs commands, shell scripts, or JS functions configured by a `{madrun.config,.madrun}.{mjs,cjs,js,json}` file.",
    "repository": "https://github.com/clevercanyon/madrun",
    "homepage": "https://github.com/clevercanyon/madrun#readme",
    "bugs": "https://github.com/clevercanyon/madrun/issues",
    "funding": "https://github.com/sponsors/clevercanyon",
    "keywords": ["clevercanyon"],
    "author": {
        "name": "Clever Canyon",
        "url": "https://clevercanyon.com"
    },
    "contributors": [],
    "type": "module",
    "bin": {
        "madrun": "./dist/bin/cli.js"
    },
    "imports": {
        "#^*": "./*",
        "#@*": "./src/resources/*",
        "#*": "./src/*"
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./cli": {
            "types": "./dist/types/cli.d.ts",
            "import": "./dist/cli.js",
            "default": "./dist/cli.js"
        },
        "./default": {
            "types": "./dist/types/default.d.ts",
            "import": "./dist/default.js",
            "default": "./dist/default.js"
        }
    },
    "sideEffects": ["**/*.{css,scss,less}", "./src/resources/initialize.ts"],
    "module": "./dist/index.js",
    "main": "./dist/index.js",
    "browser": "",
    "unpkg": "./dist/index.js",
    "types": "./dist/types/index.d.ts",
    "typesVersions": {
        ">=3.1": {
            "./*": ["./dist/types/*"]
        }
    },
    "dependencies": {
        "@clevercanyon/utilities": "^1.0.598",
        "@clevercanyon/utilities.node": "^1.0.140"
    },
    "peerDependencies": {},
    "peerDependenciesMeta": {},
    "optionalDependencies": {},
    "bundleDependencies": [],
    "devDependencies": {
        "@clevercanyon/dev-deps": "^1.0.301"
    },
    "overrides": {},
    "cpu": ["x64", "arm64"],
    "os": ["darwin", "linux"],
    "engines": {
        "node": "^20.5.0 || ^20.9.0",
        "npm": "^9.8.0 || ^10.1.0"
    },
    "config": {
        "c10n": {
            "&": {
                "dotfiles": {
                    "lock": []
                },
                "build": {
                    "appType": "cma",
                    "targetEnv": "node",
                    "entryFiles": [],
                    "sideEffects": []
                },
                "ssrBuild": {
                    "appType": "",
                    "targetEnv": "",
                    "entryFiles": [],
                    "sideEffects": []
                },
                "github": {
                    "teams": {
                        "engineers": "pull",
                        "architects": "push"
                    },
                    "labels": {},
                    "configVersion": "1.0.9",
                    "envsVersion": ""
                },
                "npmjs": {
                    "configVersions": "1.0.9,1.0.9"
                }
            }
        }
    }
}
