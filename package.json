{
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"version": "1.0.88",
	"license": "GPL-3.0-or-later",
	"name": "@clevercanyon/madrun",
	"description": "Runs commands, shell scripts, or JS functions configured by a `.madrun.{json,js,cjs,mjs}` file.",
	"repository": "https://github.com/clevercanyon/madrun",
	"homepage": "https://github.com/clevercanyon/madrun#readme",
	"bugs": "https://github.com/clevercanyon/madrun/issues",
	"funding": "https://github.com/sponsors/clevercanyon",
	"keywords": ["clevercanyon"],
	"author": {
		"name": "Clever Canyon",
		"url": "https://clevercanyon.com"
	},
	"contributors": [],
	"type": "module",
	"bin": {
		"madrun": "./dist/bin/cli.js"
	},
	"imports": {},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/types/index.d.ts"
		},
		"./cli": {
			"import": "./dist/cli.js",
			"require": "./dist/cli.cjs",
			"types": "./dist/types/cli.d.ts"
		},
		"./default": {
			"import": "./dist/default.js",
			"require": "./dist/default.cjs",
			"types": "./dist/types/default.d.ts"
		}
	},
	"sideEffects": ["./src/resources/init-env.ts", "./src/cli.ts", "./src/default.ts", "./src/index.ts"],
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"browser": "",
	"unpkg": "./dist/index.js",
	"types": "./dist/types/index.d.ts",
	"typesVersions": {
		">=3.1": {
			"./*": ["./dist/types/*"]
		}
	},
	"dependencies": {
		"@clevercanyon/utilities": "^1.0.226",
		"@clevercanyon/utilities.node": "^1.0.90"
	},
	"peerDependencies": {},
	"peerDependenciesMeta": {},
	"optionalDependencies": {},
	"bundleDependencies": [],
	"devDependencies": {
		"@clevercanyon/dev-deps": "^1.0.186"
	},
	"overrides": {},
	"cpu": ["x64", "arm64"],
	"os": ["darwin", "linux"],
	"engines": {
		"node": "^19.1.0 || ^20.5.1",
		"npm": "^8.19.3 || ^9.2.0"
	},
	"config": {
		"c10n": {
			"&": {
				"dotfiles": {
					"lock": []
				},
